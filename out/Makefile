# Makefile for python interface for package pycall.
# File is generated by gopy. Do not edit.
# gopy build -output=out -vm=python3 github.com/ashupednekar/testgopy/pycall

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/Users/ashutoshpednekar/.virtualenvs/base/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = "-I/opt/homebrew/opt/python@3.12/Frameworks/Python.framework/Versions/3.12/include/python3.12"
LDFLAGS = "-L/opt/homebrew/opt/python@3.12/Frameworks/Python.framework/Versions/3.12/lib" "-lpython3.12" -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make -vm=python3 github.com/ashupednekar/testgopy/pycall

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm pycall.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w pycall.go
	# generate pycall_go$(LIBEXT) from pycall.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o pycall_go$(LIBEXT) pycall.go
	# use pybindgen to build the pycall.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _pycall$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated pycall.py python wrapper imports this c-code package
	
	$(GCC) pycall.c -dynamiclib pycall_go$(LIBEXT) -o _pycall$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


